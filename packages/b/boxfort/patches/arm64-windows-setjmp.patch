+    AREA    |.text|, CODE, READONLY, ALIGN=3
+
+    EXPORT  bxfi_setjmp
+    EXPORT  bxfi_longjmp
+
+; int bxfi_setjmp(jmp_buf env)
+; x0: env
+bxfi_setjmp
+    mov     x1, sp
+    
+    ; MSVC / Windows SDK _JUMP_BUFFER layout:
+    ; Offset 0x00: Frame (x29)
+    ; Offset 0x08: Reserved (sp)
+    ; Offset 0x10: x19-x28
+    ; Offset 0x60: x29 (fp)
+    ; Offset 0x68: x30 (lr)
+    ; Offset 0x70: sp
+    ; Offset 0x78: fpcr
+    ; Offset 0x7C: fpsr
+    ; Offset 0x80: d8-d15
+
+    ; Store Frame and Reserved
+    str     x29, [x0, #0]
+    str     x1,  [x0, #8]
+
+    ; Store integer registers (x19-x28)
+    stp     x19, x20, [x0, #16]
+    stp     x21, x22, [x0, #32]
+    stp     x23, x24, [x0, #48]
+    stp     x25, x26, [x0, #64]
+    stp     x27, x28, [x0, #80]
+
+    ; Store FP and LR
+    stp     x29, x30, [x0, #96]
+
+    ; Store SP
+    str     x1,       [x0, #112]
+
+    ; Store FPCR and FPSR
+    mrs     x2, fpcr
+    str     w2, [x0, #120]
+    mrs     x2, fpsr
+    str     w2, [x0, #124]
+
+    ; Store floating point registers (d8-d15)
+    stp     d8, d9,   [x0, #128]
+    stp     d10, d11, [x0, #144]
+    stp     d12, d13, [x0, #160]
+    stp     d14, d15, [x0, #176]
+
+    ; Return 0
+    mov     x0, #0
+    ret
+
+; void bxfi_longjmp(jmp_buf env, int val)
+; x0: env
+; x1: val
+bxfi_longjmp
+    ; Calculate return value: if (val == 0) val = 1;
+    cmp     x1, #0
+    csinc   x0, x1, xzr, ne
+
+    ; Restore integer registers (x19-x28)
+    ldp     x19, x20, [x0, #16]
+    ldp     x21, x22, [x0, #32]
+    ldp     x23, x24, [x0, #48]
+    ldp     x25, x26, [x0, #64]
+    ldp     x27, x28, [x0, #80]
+
+    ; Restore FP and LR
+    ldp     x29, x30, [x0, #96]
+
+    ; Restore SP
+    ldr     x2,       [x0, #112]
+    mov     sp, x2
+
+    ; Restore FPCR and FPSR
+    ldr     w2, [x0, #120]
+    msr     fpcr, x2
+    ldr     w2, [x0, #124]
+    msr     fpsr, x2
+
+    ; Restore floating point registers (d8-d15)
+    ldp     d8, d9,   [x0, #128]
+    ldp     d10, d11, [x0, #144]
+    ldp     d12, d13, [x0, #160]
+    ldp     d14, d15, [x0, #176]
+
+    ; Jump to the saved return address (x30 is restored LR)
+    ret
+
+    END
